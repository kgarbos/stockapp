{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "rules": {
    "quotes": ["error", "double"],
    "linebreak-style": ["error", "unix"],
    "max-len": ["error", { "code": 80 }],
    "comma-dangle": ["error", "always-multiline"],
    "object-curly-spacing": ["error", "never"],
    "indent": ["error", 2],
    "eol-last": ["error", "always"]
  }
}
